<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorOnPrimary"
    android:orientation="vertical"
    tools:context=".view.DetailActivity">


    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/black"
        android:cropToPadding="false"
        android:forceDarkAllowed="false"
        android:padding="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/primaryColor"
        android:backgroundTintMode="src_in"
        android:fallbackLineSpacing="true"
        android:gravity="center"
        android:hapticFeedbackEnabled="true"
        android:padding="5dp"
        android:textColor="@color/secondaryColor"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="TITULO : esta es una pelicula flashera" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="none"
        android:background="@color/primaryColor"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        tools:text="vamos a ver como es el mundo del reveZ , vamos a ver como el mundo del rebez, con una manito en la cadera y la otra en la cabeza , menea menaea hasta que se mueva " />

    <TextView
        android:id="@+id/fechaEstreno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@color/primaryColor"
        android:padding="10dp"
        android:textColor="@color/black"
        tools:text="fehca de estreno : 23/34/4534" />

    <TextView
        android:id="@+id/idioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:padding="10dp"
        android:textColor="@color/black"
        tools:text="Idioma : Es" />

    <TextView
        android:id="@+id/popularidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:padding="10dp"
        android:textColor="@color/black"
        tools:text="Likes : 42432345" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/primaryColor" />
</LinearLayout>